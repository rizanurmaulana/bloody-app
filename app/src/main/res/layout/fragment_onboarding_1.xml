<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.onboarding.OnboardingFragment">

    <ImageView
        android:id="@+id/imageOnboarding"
        android:layout_width="350dp"
        android:layout_height="255dp"
        android:layout_marginTop="200dp"
        android:contentDescription="@string/image_onboarding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/onboarding1" />

    <TextView
        android:id="@+id/titleOnboarding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_onboarding_1"
        android:textAlignment="center"
        android:textSize="28sp"
        android:fontFamily="@font/poppins_medium"
        android:letterSpacing="-0.05"
        app:layout_constraintTop_toBottomOf="@id/imageOnboarding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/descOnboarding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/desc_onboarding_1"
        android:textAlignment="center"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        android:letterSpacing="-0.05"
        app:layout_constraintTop_toBottomOf="@id/titleOnboarding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>